
<p id="notice"><%= notice %></p>
<h1>Singer/ Artist: <%= @artist.name %></h1>
 <%= image_tag @artist.image_url %>

<h4>List of artists Songs</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><%= song.title %></li>
    <% end %>
  </ul>
<% else %>
  <p>This artist has no songs yet.</p>
<% end %>
<br />
<br />

<p><h2>Add a new song</h2><%= render 'songs/form' %></p>



